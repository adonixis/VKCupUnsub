<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray_light</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
    </style>

    <style name="AppTheme.Button.VKLogin" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_vk_login</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
